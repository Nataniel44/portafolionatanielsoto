---
export const prerender = true;
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';



export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { title, description, date, image, tags, url } = project.data;
---
<Layout title={title}>
<article class="max-w-3xl mx-auto p-6 bg-gray-900 text-gray-300 shadow-xl"  transition:animate="fade">
  <img
    src={image}
    alt={title} 
    transition:name="img-card"
    class="w-full h-96 object-cover rounded-lg mb-6 transition-transform duration-300 ease-in-out view-transition-image"
  />

  <h1 class="text-4xl font-bold text-white mb-3 view-transition-title">{title}</h1>
  <p class="text-gray-400 text-lg mb-5">{description}</p>

  <a
    href="/" transition:persist
    class="inline-block px-5 py-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition duration-300 view-transition"
  >
    ‚Üê Volver a Proyectos
  </a>

  <a
  href={url}
  class="inline-block px-5 py-2 bg-green-600 text-white rounded-xl hover:bg-green-700 transition duration-300 view-transition"
  target="_blank" 
  rel="noopener noreferrer"
  >Visitar proyecto</a>

  <div class="text-sm text-gray-500 mt-6 mb-4">üìÖ {date.toLocaleDateString()}</div>

  <div class="flex flex-wrap gap-2 mb-6">
    {tags.map(tag => (
      <span class="px-3 py-1 text-sm bg-indigo-700 text-white rounded-full shadow-sm">{tag}</span>
    ))}
  </div>

  <div class="prose prose-invert max-w-none">
    {project.body}
  </div>
</article>
<Footer />
</Layout>
